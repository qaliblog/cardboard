<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_color">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <!-- Toolbar -->
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:background="@color/primary_color"
            android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
            app:titleTextColor="@android:color/white" />

        <!-- Left Eye Settings Card -->
        <com.google.android.material.card.MaterialCardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Left Eye Effects"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:textColor="@color/primary_text"
                    android:layout_marginBottom="16dp" />

                <!-- Enable Switch -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_marginBottom="16dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Enable Effects"
                        android:textSize="16sp"
                        android:textColor="@color/primary_text" />

                    <Switch
                        android:id="@+id/left_eye_enabled_switch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

                <!-- Contrast Slider -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Contrast"
                            android:textSize="14sp"
                            android:textColor="@color/primary_text" />

                        <TextView
                            android:id="@+id/left_eye_contrast_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="1.00"
                            android:textSize="14sp"
                            android:textColor="@color/secondary_text" />

                    </LinearLayout>

                    <com.google.android.material.slider.Slider
                        android:id="@+id/left_eye_contrast_slider"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:valueFrom="0.0"
                        android:valueTo="3.0"
                        android:value="1.0"
                        android:stepSize="0.1" />

                </LinearLayout>

                <!-- Red Tint Slider -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Red Tint"
                            android:textSize="14sp"
                            android:textColor="@color/primary_text" />

                        <TextView
                            android:id="@+id/left_eye_red_tint_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.00"
                            android:textSize="14sp"
                            android:textColor="@color/secondary_text" />

                    </LinearLayout>

                    <com.google.android.material.slider.Slider
                        android:id="@+id/left_eye_red_tint_slider"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:valueFrom="-1.0"
                        android:valueTo="1.0"
                        android:value="0.0"
                        android:stepSize="0.1" />

                </LinearLayout>

                <!-- Green Tint Slider -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Green Tint"
                            android:textSize="14sp"
                            android:textColor="@color/primary_text" />

                        <TextView
                            android:id="@+id/left_eye_green_tint_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.00"
                            android:textSize="14sp"
                            android:textColor="@color/secondary_text" />

                    </LinearLayout>

                    <com.google.android.material.slider.Slider
                        android:id="@+id/left_eye_green_tint_slider"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:valueFrom="-1.0"
                        android:valueTo="1.0"
                        android:value="0.0"
                        android:stepSize="0.1" />

                </LinearLayout>

                <!-- Fog Intensity Slider -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Fog Intensity"
                            android:textSize="14sp"
                            android:textColor="@color/primary_text" />

                        <TextView
                            android:id="@+id/left_eye_fog_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.30"
                            android:textSize="14sp"
                            android:textColor="@color/secondary_text" />

                    </LinearLayout>

                    <com.google.android.material.slider.Slider
                        android:id="@+id/left_eye_fog_intensity_slider"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:valueFrom="0.0"
                        android:valueTo="1.0"
                        android:value="0.3"
                        android:stepSize="0.05" />

                </LinearLayout>

                <!-- Directional Effect Slider -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Directional Stretch"
                            android:textSize="14sp"
                            android:textColor="@color/primary_text" />

                        <TextView
                            android:id="@+id/left_eye_directional_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.00"
                            android:textSize="14sp"
                            android:textColor="@color/secondary_text" />

                    </LinearLayout>

                    <com.google.android.material.slider.Slider
                        android:id="@+id/left_eye_directional_slider"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:valueFrom="-1.0"
                        android:valueTo="1.0"
                        android:value="0.0"
                        android:stepSize="0.1" />

                </LinearLayout>

            </LinearLayout>

        </com.google.android.material.card.MaterialCardView>

        <!-- Right Eye Settings Card -->
