                        android:valueFrom="-1.0"
                        android:valueTo="1.0"
                        android:value="0.0"
                        android:stepSize="0.1" />

                </LinearLayout>

                <!-- Green Tint Slider -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Green Tint"
                            android:textSize="14sp"
                            android:textColor="@color/primary_text" />

                        <TextView
                            android:id="@+id/right_eye_green_tint_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.00"
                            android:textSize="14sp"
                            android:textColor="@color/secondary_text" />

                    </LinearLayout>

                    <com.google.android.material.slider.Slider
                        android:id="@+id/right_eye_green_tint_slider"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:valueFrom="-1.0"
                        android:valueTo="1.0"
                        android:value="0.0"
                        android:stepSize="0.1" />

                </LinearLayout>

                <!-- Fog Intensity Slider -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginBottom="12dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Fog Intensity"
                            android:textSize="14sp"
                            android:textColor="@color/primary_text" />

                        <TextView
                            android:id="@+id/right_eye_fog_value"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0.00"
                            android:textSize="14sp"
                            android:textColor="@color/secondary_text" />

                    </LinearLayout>

                    <com.google.android.material.slider.Slider
                        android:id="@+id/right_eye_fog_intensity_slider"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:valueFrom="0.0"
                        android:valueTo="1.0"
                        android:value="0.0"
